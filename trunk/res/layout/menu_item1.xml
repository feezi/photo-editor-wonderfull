<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/bg_left_menu_item_curver"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_margin_normal"
        android:paddingRight="@dimen/layout_margin_normal"
        android:layout_marginLeft="@dimen/layout_margin_normal"
        android:layout_marginRight="@dimen/layout_margin_normal"
        android:layout_marginBottom="1dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgPhotoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="name" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="information" />
        </LinearLayout>

        <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_left_menu_arrow" /> -->
    </LinearLayout>

</LinearLayout>